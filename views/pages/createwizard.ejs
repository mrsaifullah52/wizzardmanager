<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="../../css/bootstrap.min.css">
  <link rel="stylesheet" href="../../css/stylesheet.css">

  <title>Wizzards</title>
</head>

<body>
  <header class="bg-primary">
    <div class="container">
      <!-- including navbar -->
      <%- include('../partials/navbar', {login: "yes" }) %>
    </div>
  </header>


  <section>
    <% if(wizard){ %>
      <div class="container">
        <h1 class="mt-5 text-center">
          <%= wizard.title %>
        </h1>

        <div class="row mt-3">
          <% for(let i=0; i<wizard.pages.length; i++ ){ %>

            <div class="card col-md-3 p-0 m-2">
              <div class="card-header">
                <h5>Page <%= i+1 %>
                </h5>
              </div>

              <div class="card-body">
                <a href="/wizards/viewpage/<%= wizard._id%>/<%= wizard.pages[i].pagelink%> "
                  class="btn btn-info text-white m-1" target="_blank">View Output</a>

                <a href="/wizards/editpage/<%= wizard._id%>/<%= wizard.pages[i].pagelink %>"
                  class="btn btn-warning text-white m-1">Edit Page</a>

                <button onclick="deleteWForm('<%= wizard._id%>','<%= wizard.pages[i].pagelink%>')"
                  class="btn btn-danger text-white m-1">Delete Page</button>

              </div>
            </div>

            <% } %>
        </div>

        <% if(wizard.pages.length < 10){ %>
          <hr>
          <a href="/wizards/addpage/<%= wizard._id%>" class="btn btn-primary col-md-2 py-3">Add a Page</a>
          <% } %>
      </div>
      <% }else{ %>
        <script>window.location.replace("/");</script>
        <% } %>
  </section>


  <footer>
    <!-- bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
      crossorigin="anonymous"></script>
    <!-- out javascript file -->
    <script src="../../js/javascript.js"></script>
  </footer>
</body>

</html>